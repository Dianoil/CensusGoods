                 Grid.Column="1"
                 FontSize="20"
                 HorizontalContentAlignment="Left"
                 VerticalAlignment="Center"
                 Grid.ColumnSpan="2"
                 x:Name="PasswTxt"/>-->

        <!--<Label Content="Пароль"
               Grid.Row="2"/>-->
    </Grid>
</Window>
